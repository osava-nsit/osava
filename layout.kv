<WhiteBorderedLabel>:
    canvas.after:
        Color:
            rgb: 1,1,1
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1

<ColoredBorderedLabel>:
    canvas.after:
        Color:
            rgb: 0.6,0.6,0.6
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1

<Button>:
    background_color: 0, 0, 0, 1

<ColoredButton>:
    background_color: 0.110, 0.306, 0.643, 0.7

<MainMenuScreen>:
    title: title
    about_label: about_label
    FloatLayout:
        canvas:
            Color:
                rgba: 0.071, 0.116, 0.314, 0.7
            Rectangle:
                size: self.size
                pos: self.pos
