<MainMenuScreen>:
    GridLayout:
        rows: 5
    	Label:
            text: 'Operating Systems Algorithm Simulator Kit'
            size_hint_y: 0.3
        Button:
        	text: 'CPU Scheduling Algorithms'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'cpu1'
        Button:
        	text: 'Bankers Algorithm'
        Button:
        	text: 'Page Replacement Algorithms'
        Button:
        	text: 'Disk Scheduling Algorithms'

<CPUSchedulingScreen>:
    num_processes: num_processes
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'CPU Scheduling Algorithms'
            size_hint_y: 0.1
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.2
            Label:
                text: 'Number of Processes (Max 25):'
            TextInput:
                id: num_processes
                multiline: 'False'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.7
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'FCFS'
                    on_press:
                        root.cpu_type = 'FCFS'
                        root.load_form()
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'cpu2'
                Button:
                    text: 'Round Robin'
                    on_press:
                        root.cpu_type = 'Round Robin'
                        root.load_form()
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'cpu2'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'SJF Non-Preemptive'
                    on_press:
                        root.cpu_type = 'SJF Non-Preemptive'
                        root.load_form()
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'cpu2'
                Button:
                    text: 'SJF Preemptive'
                    on_press:
                        root.cpu_type = 'SJF Preemptive'
                        root.load_form()
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'cpu2'
            Button:
                text: 'Back'
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'menu'

<CPUInputScreen>:
    layout: layout
    type_text: type_text
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.1
            id: type_text
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Label:
                text: 'Sno.'
            Label:
                text: 'Processes'
            Label:
                text: 'Arrival time (ms)'
            Label:
                text: 'CPU burst time (ms)'
        BoxLayout:
            orientation: 'vertical'
            id: layout
        GridLayout:
            size_hint_y: 0.2
            cols: 2
            Button:
                text: 'Back'
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'cpu1'
            Button:
                text: 'Submit'
                on_press:
                    root.calculate_schedule()
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'cpu3'

<CPUOutputScreen>:
    layout: layout
    gantt: gantt
    BoxLayout:
        size_hint_y: 0.8
        orientation: 'vertical'
        Label:
            text: 'The processes will be scheduled as follows:'
            size_hint_y: 0.15
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Process'
            Label:
                text: 'Start time'
            Label:
                text: 'End time'
        BoxLayout:
            orientation: 'vertical'
            id: layout
        BoxLayout:
            size_hint_y: 0.2
            id: gantt
        GridLayout:
            size_hint_y: 0.2
            cols: 2
            Button:
                text: 'Back'
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'cpu2'
            Button:
                text: 'Exit'
                on_press: root.stop()
